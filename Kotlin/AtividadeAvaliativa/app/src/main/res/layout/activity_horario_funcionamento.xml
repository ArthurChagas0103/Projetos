<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFFFC"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HorarioFuncionamento">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horário de Funcionamento"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quarta-Feira - 11:00–15:00, 17:00–22:30"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quinta-Feira - 11:00–15:00, 17:00–23:00"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexta-Feira - 11:00–23:00"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sábado - 11:00–23:00"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domingo - 11:00–22:00"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Segunda-Feira - 11:00–15:00, 17:00–22:30"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terça-Feira - 11:00–15:00, 17:00–22:30"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:backgroundTint="#FF5757"
        android:text="Voltar"
        android:textSize="24sp"
        app:cornerRadius="50sp" />

</LinearLayout>